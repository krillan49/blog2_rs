<p style="color: green"><%= notice %></p>

<h1 class="text-center">Comments</h1>

<h5 class="text-center"><%= link_to "New comment", new_comment_path %></h5><br>

<div id="comments">
  <div class="table-responsive">
    <table class="table table-striped">
      <thead> 
        <tr> 
          <th>Автор</th>
          <th>AID</th>
          <th>Коммент(Show)</th> 
          <th>CID</th> 
          <th>Type</th> 
          <th>TID</th>
          <th>Delete</th> 
        </tr> 
      </thead>
      <tbody>
        <% @comments.each do |comment| %>
          <tr> 
            <td><!-- show user -->
              <% if comment.user %>
                <a href="/protected/<%= comment.user.id %>"><%= comment.author %></a>
              <% else %>
                <%= comment.author %>(unreg)
              <% end %>
            </td>
            <td><%= comment.user ? comment.user.id : '-' %></td> 
            <td><%= link_to comment.body, comment %></td> <!-- show comment -->
            <td><%= comment.id %></td> 
            <td><!-- show content -->
              <% if comment.commentable %>
                <%= link_to comment.commentable_type, comment.commentable %>
              <% else %>
                <%= comment.commentable_type %>(deleted)
              <% end %>
            </td>
            <td><%= comment.commentable_id %></td> 
            <td><%= button_to "Destroy this comment", comment, method: :delete, class: 'btn btn-link'%></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


