<p style="color: green"><%= notice %></p>

<h1 class="text-center">Comments</h1>

<h5 class="text-center"><%= link_to "New comment", new_comment_path %></h5><br>

<div id="comments">
  <% @comments.each do |comment| %>
    <%= render comment %>
    <p>ID: <%= comment.id %>; Type: <%= comment.commentable_type %>; TID: <%= comment.commentable_id %></p>
    <p>
      <%= link_to "Show this comment", comment %>
    </p>
  <% end %>
</div>


