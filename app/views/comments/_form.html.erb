<%= form_with(model: comment) do |form| %>
  <% if comment.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
        <% comment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- ===================== добавлено ======================== -->
  <div>
    <%= form.label :commentable_type, style: "display: block" %>
    <%= form.select :commentable_type, ["Post", "Image"] %>
  </div>

  <div>
    <%= form.label :commentable_id, style: "display: block" %>
    <%= form.select :commentable_id, @content_id_selector %>
  </div>
  <!-- ======================================================== -->
  <!-- ===================== девайс ======================== -->
  <div>
    Author: <b><%= current_user.username %></b>
    <%= form.hidden_field :author, value: current_user.username %>
  </div> 
  <!-- ======================================================== --> 

  <div>
    <%= form.label :body, style: "display: block" %>
    <%= form.text_area :body %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
