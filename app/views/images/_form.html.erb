<%= form_with(model: image) do |form| %>

  <% if image.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(image.errors.count, "error") %> prohibited this image from being saved:</h2>

      <ul>
        <% image.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <p>Автор: <b><%= current_user.username %></b></p>
    <%= form.hidden_field :user_id, value: current_user.id %>
    <%= form.hidden_field :author, value: current_user.username %>
  </div>

  <div class="mb-3">
    <%= form.label :url, class: 'form-label' %>
    <%= form.text_area :url, class: 'form-control' %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
