<%= form_with(model: post) do |form| %>

  <% if post.errors.any? %>
    <div class="error_form_message">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <p><%= t('posts.all.author') %> <b><%= current_user.username %></b></p>
    <%= form.hidden_field :user_id, value: current_user.id %>
    <%= form.hidden_field :author, value: current_user.username %>
  </div>

  <div class="mb-3">
    <%= form.label :content, t('posts.all.content'), class: 'form-label' %>
    <%= form.text_area :content, class: 'form-control textarea_big' %>
  </div>

  <div>
    <%= form.submit t('submits.create_post') %>
  </div>
<% end %>
