<p style="color: green"><%= notice %></p>

<h1 class="text-center">Posts</h1>

<h5 class="text-center"><%= link_to "New post", new_post_path %></h5>

<div id="posts">
  <% @posts.each do |post| %>
    <p class="text-center">ID: <%= post.id %></p>
    <%= render post %>
    <p>
      <%= link_to "Show this post", post %>
    </p>
  <% end %>
</div>

