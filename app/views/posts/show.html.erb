<p style="color: green"><%= notice %></p>

<%= render @post %>

<div>
  <%= link_to "Edit this post", edit_post_path(@post) %> |
  <%= link_to "Back to posts", posts_path %>

  <%= button_to "Destroy this post", @post, method: :delete %>
</div>


<!-- ===================== comments _form.html.erb ======================== -->
<h1>New comment</h1>

<%= render "com_form", comment: @post.comments.build %> <!-- отправим build -->

<br>
<!-- ====================================================================== -->


<!-- ===================== Вывод комментов ======================== -->
<h1>All comments</h1>

<% if @post.comments.size < 2 %>
  <h4>Пока еще нет комментариев</h4>
<% end %>

<% @post.comments.each do |comment| %>
  <% if comment.body && comment.body.size > 0 %> <!-- Избавляемся от comments.build -->
    <h6>Author: <%= comment.author %></h6>
    <p>Body: <%= comment.body %></p>
    <hr>
  <% end %>
<% end %>